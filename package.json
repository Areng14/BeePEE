{
    "name": "beepee",
    "main": "backend/main.js",
    "private": true,
    "version": "1.0.0-BETA",
    "description": "BEEmod Package Editor",
    "author": "Areng",
    "repository": {
        "type": "git",
        "url": "https://github.com/Areng14/BeePEE.git"
    },
    "scripts": {
        "dev": "concurrently -k \"vite\" \"electron .\"",
        "build": "vite build && electron-builder",
        "start": "electron .",
        "format": "prettier --write .",
        "lint": "eslint . --fix",
        "test": "jest"
    },
    "build": {
        "appId": "com.beepee.app",
        "productName": "BeePEE",
        "icon": "public/icon.png",
        "publish": [
            {
                "provider": "github",
                "owner": "Areng14",
                "repo": "BeePEE",
                "releaseType": "prerelease"
            }
        ],
        "files": [
            "dist/**/*",
            "backend/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "build",
            "output": "release"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "publisherName": "Areng",
            "icon": "public/icon.ico",
            "fileAssociations": [
                {
                    "ext": "bpee",
                    "name": "BeePEE Package",
                    "description": "BeePEE Package File",
                    "icon": "public/icon.ico",
                    "role": "Editor"
                },
                {
                    "ext": "bee_pack",
                    "name": "BEEmod Package",
                    "description": "BEEmod Package File",
                    "icon": "public/icon.ico",
                    "role": "Editor"
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "perMachine": false,
            "deleteAppDataOnUninstall": false
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "category": "Development",
            "icon": "public/icon.png",
            "fileAssociations": [
                {
                    "ext": "bpee",
                    "name": "BeePEE Package",
                    "description": "BeePEE Package File",
                    "mimeType": "application/x-beepee-package"
                },
                {
                    "ext": "bee_pack",
                    "name": "BEEmod Package",
                    "description": "BEEmod Package File",
                    "mimeType": "application/x-beemod-package"
                }
            ]
        },
        "extraResources": [
            {
                "from": "node_modules/7zip-bin",
                "to": "extraResources/7zip-bin",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "backend/libs/studiomdl",
                "to": "extraResources/studiomdl"
            },
            {
                "from": "backend/libs/maretf",
                "to": "extraResources/maretf"
            },
            {
                "from": "backend/libs/VMF2OBJ",
                "to": "extraResources/VMF2OBJ",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "backend/libs/areng_cartoonify",
                "to": "extraResources/areng_cartoonify"
            },
            {
                "from": "backend/libs/areng_obj23ds",
                "to": "extraResources/areng_obj23ds"
            },
            {
                "from": "backend/libs/areng_vmfMerge",
                "to": "extraResources/areng_vmfMerge",
                "filter": [
                    "**/*"
                ]
            }
        ]
    },
    "jest": {
        "setupFilesAfterEnv": [
            "<rootDir>/backend/__tests__/jest.setup.js"
        ],
        "testMatch": [
            "<rootDir>/backend/**/*.test.js"
        ],
        "testEnvironment": "node"
    },
    "dependencies": {
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/sortable": "^10.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@mui/icons-material": "^7.2.0",
        "@mui/material": "^7.2.0",
        "@react-three/drei": "^10.6.1",
        "@react-three/fiber": "^9.3.0",
        "7zip-bin": "^5.2.0",
        "electron-updater": "^6.6.2",
        "node-7z": "^3.0.0",
        "p-limit": "^7.2.0",
        "pica": "^8.0.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-markdown": "^10.1.0",
        "react-router-dom": "^7.7.0",
        "sharp": "^0.34.3",
        "three": "^0.179.1",
        "vdf-parser": "^1.2.1",
        "vmf-transpiler": "^1.0.0",
        "vtf": "github:icewind1991/vtf.js",
        "winreg": "^1.2.5"
    },
    "devDependencies": {
        "@eslint/js": "^9.30.1",
        "@types/react": "^19.1.8",
        "@types/react-dom": "^19.1.6",
        "@vitejs/plugin-react": "^4.6.0",
        "concurrently": "^9.2.0",
        "electron": "^37.2.2",
        "electron-builder": "^26.0.12",
        "eslint": "^9.30.1",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.5.1",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.3.0",
        "jest": "^30.0.4",
        "prettier": "^3.6.2",
        "vite": "^7.0.4"
    }
}
